<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.study.neutree.components.CircleImageView
        android:id="@+id/noteListItemImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:civ_border_width="0dp"
        app:civ_border_color="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp"
            android:id="@+id/noteListItemTitle"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/noteListItemUser"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/noteListItemLoveNum"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/noteListItemLastEditTime"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


</LinearLayout>
